---
import Layout from '~/layouts/PageLayout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Page non trouvée',
};
---

<Layout metadata={metadata}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Erreur</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl mb-4">Désolé, nous ne trouvons pas la page demandée.</p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Retour à l'accueil</a>
      </div>
    </div>
  </section>
</Layout>
